<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/oil"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/maplestorybold"
            android:text="검증 희망 이름" />

        <EditText
            android:id="@+id/validid"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:fontFamily="@font/maplestorybold"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/validbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/maplestorybold"
            android:background="@color/iron"
            android:layout_weight="1"
            android:text="검증"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/validtogyro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/maplestorybold"
            android:background="@color/iron"
            android:layout_weight="1"
            android:text="다시"
            android:textSize="15dp" />

        <Button
            android:id="@+id/validfind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/maplestorybold"
            android:background="@color/iron"
            android:layout_weight="1"
            android:text="조회"
            android:textSize="15dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/validresult"
            android:textColor="@color/white"
            android:fontFamily="@font/maplestorybold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </ScrollView>

</LinearLayout>